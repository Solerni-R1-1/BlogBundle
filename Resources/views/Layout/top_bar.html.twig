<div id="top_bar" class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('claro_index') }}">Claroline</a>

            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li>
                        <a href="{{ path('claro_desktop_open_tool', {"toolName": "resource_manager"}) ~ "#resources/" ~ personalWorkspace.id }}">
                            <i class="icon-share-alt"></i> {{ 'back_to_workspace'|trans({}, 'icap_blog') }}
                        </a>
                    </li>
                    {% if is_granted('ROLE_WS_MANAGER_' ~ blog.workspace.id) %}
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-eye-open"></i>{{ 'show_as'|trans({}, 'platform') }}
                            <b class="caret"></b>
                        </a>

                        <ul class="dropdown-menu">
                            {% if has_role_access_to_workspace('ROLE_ANONYMOUS', blog.workspace.id) %}
                                <li>
                                    <a href="?view_as=ROLE_ANONYMOUS_{{ blog.workspace.id }}">
                                        {{ 'anonymous'|trans({}, 'platform') }}
                                    </a>
                                </li>
                            {% endif %}
                            {% for role in personalWorkspace.getRoles() %}
                                {% if has_role_access_to_workspace(role.getName(), blog.workspace.id) %}
                                    <li>
                                        <a href="{{ path('icap_blog_view', {'blogId': blog.getId()}) }}?view_as={{ role.getName() }}">
                                            {{ role.getTranslationKey()|trans({}, 'platform') }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_WS_MANAGER_' ~ blog.workspace.id) %}
                    <li>
                        <a href="{{ path('icap_blog_configure', {"blogId": blog.id}) }}">
                            <i class="icon-wrench"></i> {{ 'options'|trans({}, 'platform') }}
                        </a>
                    </li>
                    {% endif %}
                </ul>

                <ul class="nav pull-right">
                    <li class="divider-vertical"></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user"></i> {{ username }}<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                            <a href="{{ path('claro_profile_form') }}" id="link-account">
                                {{ 'my_account'|trans({}, 'platform') }}
                            </a>
                            </li>
                            <li class="divider"></li>
                            {% if personalWorkspace is not null %}
                            <li>
                            <a href="{{ path('claro_workspace_open_tool',
                                {'workspaceId': personalWorkspace.getId(), 'toolName': 'home'}) }}"
                                id="link-my-workspace">
                                {{ 'my_workspace'|trans({}, 'platform') }}
                            </a>
                            </li>
                            {% endif %}
                            <li>
                            <a href="#" id="link-agenda">
                                {{ 'my_agenda'|trans({}, 'platform') }}
                            </a>
                            </li>
                            <li>
                            <a href="{{ path('claro_desktop_open_tool', {'toolName': 'resource_manager'}) ~ '#resources/0' }}" id="link-my-resources">
                                {{ 'my_resources'|trans({}, 'platform') }}
                            </a>
                            </li>
                            <li>
                            <a href="#" id="link-my-contacts">
                                {{ 'my_contacts'|trans({}, 'platform') }}
                            </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                            <a href="#" id="link-my-notes">
                                {{ 'my_notes'|trans({}, 'platform') }}
                            </a>
                            </li>
                            <li>
                            <a href="#" id="link-portfolio">
                                {{ 'my_portfolio'|trans({}, 'platform') }}
                            </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                {% if isImpersonated %}
                                    <a href="{{ path('claro_desktop_open', {'_switch': '_exit'}) }}">
                                {% else %}
                                    <a href="{{ path('claro_security_logout') }}" id="link-logout">
                                {% endif %}
                                {{ 'logout'|trans({}, 'platform') }}
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
