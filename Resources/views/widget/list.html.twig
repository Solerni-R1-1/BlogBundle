<div class="list-group">
    {% for widgetItem in widgetItems %}
    <a href="{{ path('icap_blog_view', {'blogId' : widgetItem.blog.id}) }}" class="list-group-item">
        {{ widgetItem.blog.resourceNode.name }}
        <span class="badge">{{ widgetItem.blog.countPublishedPosts }}</span>
    </a>
    {% else %}
    <span>{{ 'widget_list_no_blog'|trans({}, 'icap_blog') }}</span>
    {% endfor %}
</div>